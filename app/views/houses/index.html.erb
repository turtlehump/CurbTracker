<p id="notice"><%= notice %></p>

<div class="center">
<h1>Houses</h1>

<table align="center">
  <thead>
    <tr>
      <th>Address</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Description</th>
      <th>Paid</th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
        <td><%= house.address %></td>
        <td><%= house.name %></td>
        <td><%= house.phone %></td>
        <td><%= house.description %></td>
        <% if house.paid %>
          <td><%= "Yes" %></td>
        <% else %>
          <td><%= "No" %></td>
        <% end %>
        <td><%= link_to 'Show', house %></td>
        <td><%= link_to 'Edit', edit_house_path(house) %></td>
        <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<br>
<%= @map_str %>
<br>

<%= link_to 'New House', new_house_path %><br><br>
</div>
